import Footer from '../components/footer.component.astro'
import { ClientRouter } from 'astro:transitions'
---

<!doctype html>
<html lang="en" class="w-full h-full overflow-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Fix my card</title>
    <ClientRouter />
  </head>
  <body class="m-0 w-full h-full overflow-hidden">
    <Header />
    <div class="overflow-y-auto h-[calc(100%-64px)]">
      <slot />
      <Footer />
    </div>
  </body>
</html>
