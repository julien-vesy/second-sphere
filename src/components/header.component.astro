---
const headers = [
  {
    ref: '/',
    name: 'Accueil',
  },
  {
    ref: '/prestations',
    name: 'Mes prestations',
  },
  {
    ref: '/mes-realisations',
    name: 'Mes réalisations',
  },
  {
    ref: '/devis',
    name: 'Demander un devis',
  },
  {
    ref: '/about',
    name: 'À propos',
  },
]
---

<header class="flex w-full h-20 bg-white shadow-md fixed top-0 left-0 z-50">
  <div class="container mx-auto h-full px-4 flex items-center">
    <!-- Logo / Image -->
    <div class="flex items-center">
      <img
        id="fixMyCard"
        src="https://kqedvhcdsrldkhpavxgx.supabase.co/storage/v1/object/public/storagetestnet/fix-my-card.jpg"
        alt="Logo"
        fetchpriority="high"
        width="48"
        height="48"
        class="h-12 w-auto"
      />
    </div>

    <!-- Navigation Buttons -->
    <nav class="flex items-center gap-6">
      {
        headers.map((item) => (
          <button
            onclick={`location.href='${item.ref}'`}
            class="px-4 py-2 text-gray-700 hover:text-indigo-600 transition-colors font-medium"
          >
            {item.name}
          </button>
        ))
      }
    </nav>
  </div>
</header>
