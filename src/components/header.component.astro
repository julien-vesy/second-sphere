---
import fixMyCard from '../assets/fix-my-card.jpg'
---

<header class="flex w-full h-20 bg-white shadow-md fixed top-0 left-0 z-50">
  <div class="container mx-auto h-full px-4 flex items-center">
    <!-- Logo / Image -->
    <div class="flex items-center">
      <img
        id="fixMyCard"
        src={fixMyCard.src}
        alt="Logo"
        fetchpriority="high"
        width="48"
        height="48"
        class="h-12 w-auto"
      />
    </div>

    <!-- Navigation Buttons -->
    <nav class="flex items-center gap-6">
      <button
        onclick="location.href='/'"
        class="px-4 py-2 text-gray-700 hover:text-indigo-600 transition-colors font-medium"
      >
        Accueil
      </button>
      <button
        class="px-4 py-2 text-gray-700 hover:text-indigo-600 transition-colors font-medium"
      >
        Mes prestations
      </button>
      <button
        onclick="location.href='/mes-realisations'"
        class="px-4 py-2 text-gray-700 hover:text-indigo-600 transition-colors font-medium"
      >
        Mes réalisations
      </button>
      <button
        onclick="location.href='/devis'"
        class="px-4 py-2 text-gray-700 hover:text-indigo-600 transition-colors font-medium"
      >
        Demander un devis
      </button>
      <button
        class="px-4 py-2 text-gray-700 hover:text-indigo-600 transition-colors font-medium"
      >
        À propos
      </button>
    </nav>
  </div>
</header>
