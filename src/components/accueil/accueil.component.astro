---
import CheckCircle from '../../assets/icons/circle-check.svg'
import Sparkles from '../../assets/icons/sparkles.svg'
import RaichuCorrection from '../../assets/illustrations/raichu-correction.jpg'
import RaichuFinition from '../../assets/illustrations/raichu-finition.jpg'
import RaichuNettoyage from '../../assets/illustrations/raichu-nettoyage.jpg'
import RaichuRetouche from '../../assets/illustrations/raichu-retouche.jpg'
import OrderCheck from './order-check.tsx'
import FixMyCard from '../../assets/illustrations/fix-my-card.png'
import { Image } from 'astro:assets'
import Fix from '../../assets/illustrations/fix.png'
import My from '../../assets/illustrations/my.png'
import Card from '../../assets/illustrations/card.png'
import pokePattern from '../../assets/illustrations/poke-pattern-2x.png'
import tcgDevicesBg from '../../assets/illustrations/tcg-devices-bg.jpg'
import tcgDevicesBgPattern from '../../assets/illustrations/tcg-devices-bg-pattern.png'
import ShinyPokeball from '../../assets/illustrations/shiny-pokeball.png'
import Masterball from '../../assets/illustrations/masterball.png'
import LoveBall from '../../assets/illustrations/loveball.png'
import ImageModal from '../realisations/image-modal.tsx'

const values = [
  {
    icon: LoveBall,
    title: 'Passion',
    description:
      'Chaque carte a son histoire et un propriétaire. Nous restaurons avec' +
      ' soin chaque carte qui nous a été confiée.',
    color: 'from-rose-400 to-pink-600',
  },
  {
    icon: ShinyPokeball,
    title: 'Satisfaction',
    description:
      'La satisfaction client est notre priorité, toutes les étapes de la' +
      ' restauration de votre carte vous seront communiquées, et Fix My Card' +
      ' répondra au maximum à vos attentes.',
    color: 'from-amber-400 to-orange-600',
  },
  {
    icon: Masterball,
    title: 'Précision',
    description:
      'Toutes nos prestations sont réalisées avec le plus grand soin et la' +
      ' plus grande minutie.',
    color: 'from-blue-400 to-indigo-600',
  },
]

const techniques = [
  {
    icon: RaichuNettoyage,
    title: 'Nettoyage minutieux',
    description:
      'Élimination délicate des impuretés sans altérer la surface de la carte',
  },
  {
    icon: RaichuCorrection,
    title: 'Correction des endommagements',
    description: 'Correction des endommagements',
  },
  {
    icon: RaichuRetouche,
    title: 'Retouche des détails',
    description: 'Restauration minutieuse de la partie holographique',
  },
  {
    icon: RaichuFinition,
    title: 'Finition',
    description:
      'Techniques de pressage professionnel pour améliorer le rendu final de' +
      ' la carte',
  },
]
---

<style define:vars={{ patternUrl: `url(${tcgDevicesBgPattern.src})` }}>
  .tcg-devices-section {
    position: relative;
  }

  .tcg-devices-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--patternUrl);
    background-position: 50%;
    background-size: 300px;
    opacity: 0.2;
    pointer-events: none;
    z-index: 0;
    height: 100%;
    width: 100%;
  }

  .tcg-devices-section > * {
    position: relative;
    z-index: 1;
  }
</style>

<div class="overflow-hidden">
  <section
    style={`background-image: url(${pokePattern.src}); background-size: 300px;`}
    class="min-h-[calc(100vh-64px)] grid grid-cols-1 lg:grid-cols-2 justify-center items-center
    overflow-hidden"
  >
    <div class="flex justify-center items-center md:mx-5">
      <div
        class="flex flex-col justify-center lg:items-start items-center
        max-w-[610px] h-[550px]"
      >
        <h1
          class="text-6xl lg:text-8xl font-bold text-center lg:text-left mb-2"
        >
          Redonnez vie
        </h1>
        <h1
          class="text-6xl lg:text-8xl font-bold text-center lg:text-left mb-2"
        >
          à vos cartes
        </h1>
        <p class="text-xl text-center lg:text-left mb-2 p-5 lg:p-0">
          Restauration experte pour retrouver l’éclat, la précision et la valeur
          de vos jeux.
        </p>
        <div class="w-[210px] h-[40px]">
          <OrderCheck client:load />
        </div>
      </div>
    </div>
    <div
      class="h-[750px] mb-0 flex justify-center items-center
       bg-white w-full md:w-auto max-w-full md:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 relative
      z-10 bg-card text-card-foreground flex-col gap-6 rounded-xl md:border transition-shadow"
    >
      <div class="text-center">
        <div class="inline-block">
          <Image
            id="FixMyCard"
            src={FixMyCard}
            alt="FixMyCard"
            fetchpriority="high"
            quality={80}
            width={320}
            height={320}
            format="webp"
            class="w-21 h-21 text-yellow-500 mx-auto"
          />
        </div>
        <div class="w-full flex justify-center align-middle">
          <Image
            id="fix"
            src={Fix}
            alt="Fix"
            fetchpriority="high"
            quality={80}
            width={120}
            format="webp"
          />
          <Image
            id="my"
            src={My}
            alt="My"
            fetchpriority="high"
            quality={80}
            width={120}
            format="webp"
          />
        </div>
        <div class="w-full flex justify-center align-middle">
          <Image
            id="card"
            src={Card}
            alt="card"
            fetchpriority="high"
            quality={80}
            width={200}
            format="webp"
          />
        </div>
        <p class="text-2xl md:text-3xl text-gray-700 mb-4 max-w-3xl mx-auto">
          Redonner vie à vos souvenirs
        </p>
        <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto italic">
          Chaque carte mérite une seconde chance
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <button
            onclick="location.href='prestations'"
            class="inline-flex items-center justify-center gap-2
            whitespace-nowrap text-sm font-medium transition-all
            disabled:pointer-events-none disabled:opacity-50
            [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4
            shrink-0 [&_svg]:shrink-0 outline-none focus-visible:border-ring
            focus-visible:ring-ring/50 focus-visible:ring-[3px]
            aria-invalid:ring-destructive/20
            dark:aria-invalid:ring-destructive/40
            aria-invalid:border-destructive bg-background
            hover:text-accent-foreground dark:bg-input/30 dark:border-input
            dark:hover:bg-input/50 h-10 rounded-md px-6 has-[>svg]:px-4
            border-2 border-purple-600 text-purple-600 hover:bg-purple-50"
          >
            Nos prestations
          </button>
        </div>
      </div>
    </div>
  </section>

  <section class="relative py-24 bg-white overflow-hidden">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2
            class="text-5xl mb-6 bg-gradient-to-r from-orange-600 to-red-600
            bg-clip-text text-transparent"
          >
            Notre Histoire
          </h2>
          <div class="space-y-4 text-gray-700">
            <p class="text-lg leading-relaxed">
              Tout a commencé par une erreur, un ami m’a abîmé une carte,&nbsp;
              et j’étais extrêmement triste car c’était la carte de mes&nbsp;
              rêves. C’était une occasion d’ouvrir une porte alors encore&nbsp;
              jamais explorée. D’une carte abîmée est née une envie,&nbsp;
              l’améliorer pour tenter de retrouver son état initial,&nbsp;
              préserver l’émotion qu’elle renferme.
            </p>
            <p class="text-lg leading-relaxed">
              Tout bon collectionneur de carte Pokémon a une carte à&nbsp;
              laquelle il pense quand on lui dit le mot “collection”, des&nbsp;
              émotions attachées à celle-ci.
            </p>
            <p class="text-lg leading-relaxed">
              Chez Fix My Card c'est l’objectif, prendre soin de vos&nbsp;
              cartes de collection, et ainsi préserver ces émotions qui&nbsp;
              nous sont si chères, celles pour lesquelles nous continuons&nbsp;
              à être passionnés.
            </p>
          </div>
        </div>
        <div class="relative">
          <div
            class="absolute -top-4 -left-4 w-full h-full bg-gradient-to-br
            from-orange-200 to-red-200 rounded-2xl"
          >
          </div>
          <div class="relative bg-white p-8 rounded-2xl shadow-xl">
            <h3 class="text-2xl mb-4 text-gray-900">
              Intérêt de la restauration
            </h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-3">
                <CheckCircle
                  class="w-5 h-5 text-green-600 mt-1 flex-shrink-0"
                />
                <span class="text-gray-700">
                  Amélioration de l’état global de la carte (LP → GOOD)&nbsp;
                  c’était l’état de la carte tu peux mettre le logo de&nbsp;
                  cardmarket celui en rouge et celui en jaune pour illustrer
                </span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle
                  class="w-5 h-5 text-green-600 mt-1 flex-shrink-0"
                />
                <span class="text-gray-700">
                  Revalorisation de la carte (note de gradation 7 fleche up)
                </span>
              </li>
              <li class="flex items-start gap-3">
                <CheckCircle
                  class="w-5 h-5 text-green-600 mt-1 flex-shrink-0"
                />
                <span class="text-gray-700">
                  Entretien d’une collection (un classeur propre)
                </span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    style={` background-image: url(${tcgDevicesBg.src});background-position: 50%;
    background-repeat: no-repeat;
    background-size: cover;`}
    class="tcg-devices-section relative py-24 bg-gradient-to-br from-slate-900
    to-indigo-900 overflow-hidden"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-5xl mb-6 text-blue-600 font-bold">Nos Valeurs</h2>
        <p class="text-xl text-black max-w-3xl mx-auto">
          Ce qui guide chaque geste, chaque décision, chaque restauration
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          values.map((value) => (
            <div>
              <div
                data-slot="card"
                class="bg-white/10 backdrop-blur-sm border-white/20
                transition-all duration-300 h-full shadow-xl
                rounded-xl"
              >
                <div data-slot="card-content" class="pt-8 text-center">
                  <div
                    class={`inline-flex py-6 px-3 rounded-lg bg-gradient-to-br ${value.color} mb-6`}
                  >
                    <Image
                      src={value.icon}
                      alt={value.title}
                      fetchpriority="low"
                      width={48}
                      class="w-12 h-12"
                      quality={90}
                      format="webp"
                    />
                  </div>
                  <h3 class="text-2xl mb-4 text-blue-600 font-semibold">
                    {value.title}
                  </h3>
                  <p class="text-black leading-relaxed m-3">
                    {value.description}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="relative py-24 bg-gradient-to-br from-purple-50 to-blue-50 overflow-hidden"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2
          class="text-5xl mb-6 bg-gradient-to-r from-purple-600 to-blue-600
          bg-clip-text text-transparent"
        >
          Notre processus de restauration
        </h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          Des techniques professionnelles pour un résultat exceptionnel
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          techniques.map((technique) => (
            <div class="relative">
              <div
                data-slot="card"
                class="h-full hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
              >
                <div data-slot="card-content" class="pt-6">
                  <div class="flex justify-center mb-4">
                    <div>
                      <Image
                        fetchpriority="low"
                        data-clickable-image
                        src={technique.icon}
                        alt={technique.description}
                        quality={80}
                        width={630}
                        class="cursor-pointer  rounded-lg  lg:w-[210px] lg:h-[280px] md:w-[315px] md:h-[420px]"
                      />
                    </div>
                  </div>
                  <h3 class="text-xl mb-3 text-center">{technique.title}</h3>
                  <p class="text-gray-600 m-2 text-center text-sm leading-relaxed">
                    {technique.description}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-16 text-center">
        <button
          onclick="location.href='mes-realisations'"
          class="bg-gradient-to-r from-purple-600 to-blue-600
          hover:from-purple-700 hover:to-blue-700 shadow-lg
          text-white inline-flex items-center justify-center gap-2
          whitespace-nowrap text-sm font-medium transition-all outline-none
          focus-visible:ring-2 h-10 rounded-md px-6 cursor-pointer
          active:scale-95"
        >
          Découvrir toutes mes réalisations
        </button>
      </div>
    </div>
  </section>

  <section
    class="relative py-24 bg-gradient-to-br from-amber-50 to-orange-50 overflow-hidden"
  >
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <h2 class="text-5xl mb-8 text-gray-900">
          Plus qu'une restauration, une renaissance
        </h2>
        <div class="prose prose-lg mx-auto text-gray-700 space-y-6">
          <p class="text-xl italic leading-relaxed">
            "Chaque carte qui nous est confiée a vécu. Elle a été échangée dans
            une cour d'école, rangée précieusement dans un classeur, ou
            redécouverte des années plus tard."
          </p>
          <p class="text-lg leading-relaxed">
            Notre mission dépasse la simple réparation. Nous restaurons des <span
              class="font-medium">émotions</span
            >, des <span class="font-medium">souvenirs d'enfance</span>, des <span
              class="font-medium">trésors de collection</span
            >. Chaque geste est guidé par le respect de l'histoire unique de
            votre carte.
          </p>
          <p class="text-lg leading-relaxed">
            Avec patience et expertise, nous redonnons à vos cartes leur éclat,
            tout en préservant leur authenticité. Car une carte restaurée, c'est
            une nouvelle vie qui commence.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section
    class="relative py-24 bg-gradient-to-br from-blue-600 via-purple-600
    to-pink-600 text-white overflow-hidden"
  >
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-10 left-10 w-32 h-32 bg-white rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-10 right-10 w-40 h-40 bg-white rounded-full blur-3xl"
      >
      </div>
    </div>

    <div
      class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10"
    >
      <div>
        <Sparkles class="w-16 h-16 mx-auto mb-6 animate-pulse" />
        <h2 class="text-5xl mb-6">Prêt à redonner vie à vos cartes ?</h2>
        <p class="text-xl mb-10 text-purple-100 leading-relaxed">
          Chaque restauration commence par une conversation. Parlez-nous de vos
          cartes, de leur histoire, et nous vous proposerons la meilleure
          solution.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <button
            onclick="location.href='devis'"
            class="bg-white text-purple-600 hover:bg-gray-100 shadow-xl
            inline-flex items-center justify-center gap-2 whitespace-nowrap
            text-sm font-medium transition-all outline-none focus-visible:ring-2
            h-10 rounded-md px-6 cursor-pointer active:scale-95"
          >
            Demander un devis gratuit
          </button>
          <button
            onclick="location.href='about'"
            class="border-2 border-white text-white hover:bg-white/10
            shadow-xl inline-flex items-center justify-center gap-2
            whitespace-nowrap text-sm font-medium transition-all outline-none
            focus-visible:ring-2 h-10 rounded-md px-6 cursor-pointer
            active:scale-95"
          >
            En savoir plus sur nous
          </button>
        </div>
      </div>
    </div>
  </section>
  <ImageModal client:load />
</div>
