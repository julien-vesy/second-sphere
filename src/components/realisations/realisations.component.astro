---
import { Image } from 'astro:assets'
import ImageCarrousel from './image-carrousel.tsx'
import Flagadoss from '../../assets/illustrations/realisations/flagadoss.jpg'
import Rayquaza from '../../assets/illustrations/realisations/rayquaza.jpg'
import Drac from '../../assets/illustrations/realisations/dracaufeu.jpg'
import Alakazam from '../../assets/illustrations/realisations/alakazam.jpg'
import Tortank from '../../assets/illustrations/realisations/tortank.jpg'

const projects = [
  {
    title: 'Flagadoss - Southern Islands',
    service: 'Nettoyage professionnel',
    image: Flagadoss,
    description: 'Nettoyage, défroissage et réparation des bords',
    before: 'État: présence de saleté, présence de micro rayures',
    after: 'État: Comme neuf, surface plane, couleurs vives',
  },
  {
    title: 'Rayquaza ex - Fantômes Holon',
    service: 'Restauration totale',
    image: Rayquaza,
    description: 'Aplatissement et élimination des plis',
    before:
      'État: présence de saletés, présence de micro rayure, pliures importantes',
    after: 'État: Surface parfaitement plane',
  },
  {
    title: 'Dracaufeu Radieux stamp - Zénith Suprême',
    service: 'Correction d’un endommagement précis',
    image: Drac,
    description: 'Réparation minutieuse des coins et bordures',
    before: 'État: présence d’une tranche relevée',
    after: 'État: Coins restaurés, finition invisible -PSA 10',
  },
  {
    title: 'Alakazam star ex - Gardiens de Cristal',
    service: 'Correction d’un endommagement précis',
    image: Alakazam,
    description: 'Nettoyage professionnel et encapsulation',
    before: 'État: pliure sur la partie holographique',
    after: 'État: Impeccable, protégée sous grade',
  },
  {
    title: 'Dracolosse V - Évolution Céleste',
    service: 'Restauration totale',
    image: Tortank,
    description: 'Ravivage des couleurs et nettoyage',
    before: 'État: Pliure importante, enfoncements',
    after: 'État: Couleurs éclatantes, aspect rajeuni',
  },
]

const images = projects.map((p) => p.image.src)
---

<div class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-5xl mb-4 text-gray-900">Mes réalisations</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {
        projects.map((project) => (
          <div
            data-slot="card"
            data-clickable-image
            class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border overflow-hidden hover:shadow-xl transition-shadow cursor-pointer"
          >
            <div class="relative h-64 overflow-hidden">
              <Image
                src={project.image}
                alt={project.title}
                quality={90}
                width={256}
                format="webp"
                class="w-full h-full object-cover"
              />
              <div class="absolute top-4 right-4">
                <span class="inline-flex items-center justify-center rounded-md px-2 py-0.5 text-white bg-blue-600">
                  {project.service}
                </span>
              </div>
            </div>
            <div data-slot="card-content" class="px-6 [&:last-child]:pb-6 pt-4">
              <h3 class="text-xl mb-2">{project.title}</h3>
              <p class="text-gray-600 mb-4">{project.description}</p>
              <div class="space-y-2 text-sm">
                <div class="flex items-start">
                  <span class="text-red-600 mr-2">Avant:</span>
                  <span class="text-gray-700">{project.before}</span>
                </div>
                <div class="flex items-start">
                  <span class="text-green-600 mr-2">Après:</span>
                  <span class="text-gray-700">{project.after}</span>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <ImageCarrousel images={images} client:load />
</div>
