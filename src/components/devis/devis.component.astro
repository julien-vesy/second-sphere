---
import ImageContainer from './images-container.tsx'
import FormSubmitHandler from './form-submit-handler.tsx'
---

<div class="container mx-auto px-4 py-8 pt-28">
  <h1 class="text-3xl font-bold mb-6">Contactez-moi</h1>
  <p>Je vous ferais parvenir un devis des les plus bref d√©lai</p>

  <form
    id="devis-form"
    name="contact"
    method="POST"
    enctype="multipart/form-data"
    class="space-y-6"
  >
    <input type="hidden" name="form-name" value="contact" />

    <div>
      <label for="name" class="block mb-2 font-semibold">Nom</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="email" class="block mb-2 font-semibold">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="adresse" class="block mb-2 font-semibold">Adresse</label>
      <input
        type="text"
        id="adresse"
        name="adresse"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>
    <div>
      <label for="codePostal" class="block mb-2 font-semibold">
        Code Postal
      </label>
      <input
        type="text"
        inputmode="numeric"
        pattern="^(?(^00000(|-0000))|(\d{5}(|-\d{4})))$"
        id="codePostal"
        name="codePostal"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>
    <div>
      <label for="ville" class="block mb-2 font-semibold">Ville</label>
      <input
        type="text"
        id="ville"
        name="ville"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="message" class="block mb-2 font-semibold">Message</label>
      <textarea
        id="message"
        name="message"
        required
        rows="6"
        class="w-full px-3 py-2 border border-gray-300 rounded-md resize-y focus:outline-none focus:ring-2 focus:ring-blue-500"
      ></textarea>
    </div>

    <ImageContainer client:visible />

    <FormSubmitHandler client:load />
  </form>
</div>
